{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                {% for bucket in buckets %}
                "arn:aws:s3:::{{ bucket }}",
                "arn:aws:s3:::{{ bucket }}/*"
                {% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        }
    ]
} 