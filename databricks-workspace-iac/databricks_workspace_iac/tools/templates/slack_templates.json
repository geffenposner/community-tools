{
    "status_update": {
        "blocks": [
            {
                "type": "header",
                "text": {
                    "type": "plain_text",
                    "text": "${status}",
                    "emoji": true
                }
            },
            {
                "type": "context",
                "elements": [
                    {
                        "type": "image",
                        "image_url": "https://static-00.iconduck.com/assets.00/terraform-icon-452x512-ildgg5fd.png",
                        "alt_text": "terraform"
                    },
                    {
                        "type": "mrkdwn",
                        "text": "*Phase ${phase} of 7* â€¢ Databricks Workspace Deployment"
                    }
                ]
            },
            {
                "type": "section",
                "fields": [
                    {
                        "type": "mrkdwn",
                        "text": "*Workspace:*\n`${workspace_name}`"
                    },
                    {
                        "type": "mrkdwn",
                        "text": "*Region:*\n`${region}`"
                    }
                ]
            },
            {
                "type": "divider"
            },
            {
                "type": "section",
                "text": {
                    "type": "mrkdwn",
                    "text": "${message}"
                }
            }
        ]
    },
    "workspace_button": {
        "type": "actions",
        "elements": [
            {
                "type": "button",
                "text": {
                    "type": "plain_text",
                    "text": "Open Workspace",
                    "emoji": true
                },
                "url": "${workspace_url}",
                "style": "primary"
            }
        ]
    }
} 